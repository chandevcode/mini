<div class="container mx-auto px-4 py-8 max-w-4xl">
  <div class="flex justify-between items-center mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Category #<%= @category.id %></h1>
      <p class="text-gray-600 mt-2">
        Placed on <%= @category.created_at.strftime("%B %d, %Y at %I:%M %p") %>
      </p>
    </div>
    <%= link_to "Back to Category", admin_categories_path, class: "btn btn-outline" %>
  </div>

  <div class="bg-white shadow-lg rounded-lg overflow-hidden mb-6">
    <div class="p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Category</h2>
      <div class="overflow-x-auto">
        <table class="table w-full">
          <thead>
            <tr class="bg-gray-50">
              <th class="px-4 py-3 text-left">Name</th>
            </tr>
          </thead>
          <tbody>
            <tr class="bcategory-t">
              <td class="px-4 py-3">
                <div class="font-medium"><%= @category.name %></div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
