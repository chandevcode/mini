<div class="container mx-auto px-4 py-8 max-w-4xl">
  <div class="flex justify-between items-center mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Order #<%= @order.id %></h1>
      <p class="text-gray-600 mt-2">
        Placed on <%= @order.created_at.strftime("%B %d, %Y at %I:%M %p") %>
      </p>
    </div>
    <%= link_to "Back to Orders", admin_orders_path, class: "btn btn-outline" %>
  </div>

  <div class="bg-white shadow-lg rounded-lg overflow-hidden mb-6">
    <div class="p-6 border-b">
      <div class="flex justify-between items-center">
        <div>
          <h2 class="text-lg font-semibold text-gray-900">Order Status</h2>
          <div class="mt-2">
            <% case @order.status %>
            <% when "success", "completed" %>
              <span class="badge badge-success badge-lg">Completed</span>
            <% when "pending" %>
              <span class="badge badge-warning badge-lg">Pending</span>
            <% when "cancelled" %>
              <span class="badge badge-error badge-lg">Cancelled</span>
            <% end %>
          </div>
        </div>
        <div class="text-right">
          <h2 class="text-lg font-semibold text-gray-900">Total Amount</h2>
          <p class="text-2xl font-bold text-gray-900 mt-2">
            <%= number_to_currency(@order.total_price.to_f / 100) %>
          </p>
        </div>
      </div>
    </div>

    <div class="p-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Order Items</h2>
      <div class="overflow-x-auto">
        <table class="table w-full">
          <thead>
            <tr class="bg-gray-50">
              <th class="px-4 py-3 text-left">Item</th>
              <th class="px-4 py-3 text-left">Price</th>
              <th class="px-4 py-3 text-left">Quantity</th>
              <th class="px-4 py-3 text-left">Subtotal</th>
            </tr>
          </thead>
          <tbody>
            <% @order.order_items.each do |order| %>
              <tr class="border-t">
                <td class="px-4 py-3">
                  <div class="font-medium"><%= order.menu_item.name %></div>
                  <div class="text-sm text-gray-600"><%= order.menu_item.description %></div>
                </td>
                <td class="px-4 py-3">
                  <%= number_to_currency(order.price.to_f / 100) %>
                </td>
                <td class="px-4 py-3">
                  <%= order.qty %>
                </td>
                <td class="px-4 py-3 font-medium">
                  <%= number_to_currency((order.price * order.qty).to_f / 100) %>
                </td>
              </tr>
            <% end %>
          </tbody>
          <tfoot class="bg-gray-50">
            <tr>
              <td colspan="3" class="px-4 py-3 text-right font-medium">Total:</td>
              <td class="px-4 py-3 font-bold text-lg">
                <%= number_to_currency(@order.total_price.to_f / 100) %>
              </td>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>
  </div>

  <div class="flex justify-end gap-4">
    <%= button_to "Print Invoice", "#", class: "btn btn-primary" %>
    <% if @order.status == "pending" %>
      <%= button_to "Cancel Order", cancel_order_path(@order), 
            method: :patch, 
            class: "btn btn-error",
            data: { confirm: "Are you sure you want to cancel this order?" } %>
    <% end %>
  </div>
</div>
