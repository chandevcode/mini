<div class="container mx-auto px-4 py-8">
  <div class="flex flex-col md:flex-row justify-between items-center mb-6 gap-4">
    <h1 class="text-3xl md:text-4xl font-bold text-gray-900">Order History</h1>

    <!-- Search and Filter -->
    <div class="w-full md:w-auto">
      <%= search_form_for @q, url: admin_orders_path, method: :get, class: "flex flex-col md:flex-row gap-2" do |f| %>
        <%= f.search_field :id_eq,
          class: "input input-bordered w-full" %>

        <%= f.submit "Search", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>

  <% if @orders.empty? %>
    <div class="alert alert-info shadow-lg">
      <div>
        <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current flex-shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.998-.833-2.728 0L4.732 16.5c-.77.833.192 2.5 1.732 2.5z" />
        </svg>
        <span>No orders found. Start shopping!</span>
      </div>
    </div>
  <% else %>
    <div class="bg-white shadow-md rounded-lg overflow-hidden">
      <div class="overflow-x-auto">
        <table class="table table-zebra w-full">
          <thead>
            <tr class="bg-gray-100">
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Order ID</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Date</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Items</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Total</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-700 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% @orders.each do |order| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-mono font-medium text-gray-900">#<%= order.id %></div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm text-gray-700">
                    <%= order.created_at.strftime("%b %d, %Y") %>
                  </div>
                  <div class="text-xs text-gray-500">
                    <%= order.created_at.strftime("%I:%M %p") %>
                  </div>
                </td>
                <td class="px-6 py-4">
                  <div class="text-sm text-gray-700">
                     items
                  </div>
                  <div class="text-xs text-gray-500 truncate max-w-xs">
                    <% order.order_items.limit(3).each do |item| %>
                      <%= item.menu_item.name %> Ã— <%= item.qty %>,
                    <% end %>
                    <% if order.order_items.count > 3 %>
                      +<%= order.order_items.count - 3 %> more
                    <% end %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="text-sm font-semibold text-gray-900">
                    <%= number_to_currency(order.total_price.to_f / 100) %>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% case order.status %>
                  <% when "success", "completed" %>
                    <span class="badge badge-success badge-sm">Completed</span>
                  <% when "pending" %>
                    <span class="badge badge-warning badge-sm">Pending</span>
                  <% when "cancelled" %>
                    <span class="badge badge-error badge-sm">Cancelled</span>
                  <% else %>
                    <span class="badge badge-info badge-sm"><%= order.status %></span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
                  <%= link_to "View", order_path(order), class: "btn btn-ghost btn-sm" %>
                  <%= link_to "Invoice", "#", class: "btn btn-outline btn-sm" %>
                  <% if order.status == "pending" %>
                    <%= button_to "Cancel", cancel_order_path(order), method: :patch, 
                      class: "btn btn-error btn-sm", 
                      data: { confirm: "Are you sure you want to cancel this order?" } %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <div class="px-6 py-4 bg-gray-50 flex flex-col md:flex-row items-center justify-between gap-4">
          <div class="text-sm text-gray-600">
            <%= page_entries_info @orders %>
          </div>
          <div>
            <%= paginate @orders %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
